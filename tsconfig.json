{
  "include": ["NetscriptDefinitions.d.ts", "*Definitions.d.ts", "src/**/*"],
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "strict": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "baseUrl": "src/",
    "allowJs": true,
    "paths": {
      "/*": ["*"],
      "@ns": ["../NetscriptMyDefinitions.d.ts", "../NetscriptDefinitions.d.ts"],
      "@4xel": ["../CustomDefinitions.d.ts"],
    }
  }
}
